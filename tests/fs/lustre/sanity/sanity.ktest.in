. "$(dirname "$(readlink -e "${BASH_SOURCE[0]}")")/../lustre-libs.sh"

require-lustre-kernel-config
require-lustre-debug-kernel-config

config-mem 10G
config-timeout 60


test_sanity-quick()
{
    tests=$(cat "$lustre_pkg_path/lustre/tests/sanity.sh" | grep run_test | awk '{ print $2 }' | xargs echo)
    echo "${tests[@]}"
    my_tests=$(split_array "${tests[@]}" BATCH INDEX)
    echo "${my_tests[@]}"
    test_list=$(join , ${my_tests[@]})
    echo $test_list

    setup_lustrefs

    FSTYPE="$FSTYPE" "$lustre_pkg_path/lustre/tests/auster" -v sanity --only $test_list

    cleanup_lustrefs
}

main "$@"
